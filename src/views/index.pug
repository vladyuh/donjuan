extends layouts/default
include helpers/mixins
include ../blocks/components/headers/headers.pug


block variables
	- const title = "Главная"
	- const bodyClass = "main-page"
block styles
block critical
	include ../styles/critical/index.css
block content
	section.home
		.container
			.home__img
				picture
					source(srcset="./img/home/background-responsive.webp" type="image/webp" media="(min-width: 1024px)")
					source(srcset="./img/home/background-responsive-1024.webp" type="image/webp" media="(min-width: 768px)")
					source(srcset="./img/home/background-responsive-768.webp" type="image/webp" media="(min-width: 480px)")
					source(srcset="./img/home/background-responsive-480.webp" type="image/webp" media="(min-width: 425px)")
					source(srcset="./img/home/background-responsive.jpg" type="image/jpeg" media="(min-width: 1024px)")
					source(srcset="./img/home/background-responsive-1024.jpg" type="image/jpeg" media="(min-width: 768px)")
					source(srcset="./img/home/background-responsive-768.jpg" type="image/jpeg" media="(min-width: 480px)")
					source(srcset="./img/home/background-responsive-480.jpg" type="image/jpeg" media="(min-width: 425px)")
					source(srcset="./img/home/background-375.webp" type="image/webp")
					img(src="../img/home/background-375.jpg" loading="lazy" alt="Background")
			.home__text
				.home__text-desc Громкая премьера!
				h1.section-h1 Мюзикл «Дон Жуан»
block scripts
	link(rel="preload" as="style" href="styles/index.css" type="text/css" onload="this.rel='stylesheet'")
	script(src="js/main.js")